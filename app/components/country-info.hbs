<div class="col-12">
  <hr class="lineFresa">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="text-primary">
        Get Country full info
      </h2>
    </div>
  </div>
  <div class="row justify-content-md-center mb-3">
    <div class="autocomplete col-6 input-group">
      <select class="custom-select" onchange={{action 'countrySelected'}}>
        {{#each this.countries as |country|}}
          <option value={{country}}>{{country.country}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  {{#if this.selectedCountry}}
    <div class="row mb-3">
      <div class="col-12">
        {{this.countryInfo.country}}
      </div>
    </div>
    <div class="row mb-3">
      <DatosGlobales @globalInfo={{this.countryInfo}}/>
    </div>
    <div class="row mb-3">
      <DailyGraphic @timeline={{this.countryInfo.country}}/>
    </div>
  {{else}}
    <div class="row mb-3">
      <div class="col-12">
        {{this.countryInfo.country}}
      </div>
    </div>
    <div class="row mb-3">
      <DatosGlobales @globalInfo={{this.countryInfo}}/>
    </div>
    <div class="row mb-3">
      <DailyGraphic @timeline={{this.countryInfo.country}}/>
    </div>
  {{/if}}
  <hr class="lineFresa">
</div>
