{{#each this.globalInfo as |data|}}
  <div class="col-3">
    <div class="col card">
      <div class="card-body">
        <div class="row">
          <h4 class="card-tritle">{{data.title}}</h4>
        </div>
        <div class="row">
          <div class="col-8">
            <span class="badge badge-{{data.typeText}}">
              {{data.casesIncrease}}~>
            </span>
          </div>
          <div class="col-4">
            <div class="row text-{{data.typeText}}">
              <h5>{{data.cases}}</h5>
            </div>
            <div class="row card-subtitle">
              <span class="little-bages">{{data.extraData}}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
