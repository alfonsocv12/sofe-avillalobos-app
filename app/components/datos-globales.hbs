{{#each this.globalInfo as |data|}}
  <div class="col-3">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <h4 class="card-tritle">Infections</h4>
        </div>
        <div class="row">
          <div class="col-8">
            <span class="badge badge-primary">
              {{data.casesIncrease}}~>
            </span>
          </div>
          <div class="col-4">
            <div class="row text-primary">
              <h4>{{data.cases}}</h4>
            </div>
            <div class="row card-subtitle">
              <small>{{data.todayCases}} today</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
